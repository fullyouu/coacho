<%= simple_form_for @offer do |f| %>
  <%= f.input :title %>
  <%= f.input :details %>
  <%= f.input :price %>
  <%= f.input :duration %>
  <%= f.input :category, :collection => %w[Sports Job-Skills Cooking Science Art Music Writing] %>
  <%= f.input :photo, as: :file %>
  <% if @offer.persisted? %>
    <%= f.submit 'Submit changes', class:'btn-primary' %>
  <% else %>
    <%= f.submit 'Submit new offer', class:'btn-primary' %>
  <% end %>
<% end %>
