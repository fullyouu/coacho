<div class="container">
  <%= simple_form_for @offer do |f| %>
    <%= f.input :title %>
    <%= f.input :details %>
    <%= f.input :price %>
    <%= f.input :duration %>
    <%= f.input :category %>
    <% if @offer.persisted? %>
      <%= f.submit 'Edit the offer', class: 'btn btn-primary' %>
    <% else %>
      <%= f.submit 'Add a new offer', class:'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
