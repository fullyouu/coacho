<div class="container">

  <div class="header">
    <br>
    <h1><strong>Offers</strong></h1>
  </div>

<% @offers.each do |offer| %>
  <%= link_to offer_path(offer), class: "add_link" do %>
    <div class="card-product">
      <%= cl_image_tag offer.photo.key, width: 100, height: 100, crop: :fill, class: "list-image" %>
      <div class="card-product-infos">
        <div class="card-product-left">
          <h2><%= link_to offer.title, offer_path(offer) %></h2>
          <p><%= link_to offer.details, offer_path(offer) %></p>
        </div>
        <div class="card-product-right">
          <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="card-trip-user avatar-bordered" />
          <h2 class="card-trip-pricing">â‚¬ <%= "#{offer.price}"%></h2>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

  <div class="link">
    <br>
    <%= link_to 'Create a new offer', new_offer_path, class: "btn-primary" %>
  </div>
</div>
