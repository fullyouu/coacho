<div class="container">

  <div class="header">
    <h1>Offers</h1>
  </div>

  <div class="cards">
    <% @offers.each do |offer| %>
      <%= link_to offer.title, offer_path(offer) %>
      <%= cl_image_tag offer.photo.key, crop: :fill, class: "list-image" %>
    <% end %>
  </div>

  <div class="link">
    <p><%= link_to 'Create a new offer', new_offer_path %></p>
  </div>
</div>
