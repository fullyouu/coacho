<div class="container">
  <% unless @offer.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('default_offer_show.png') %>)">
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @offer.photo.key %>)">
      <% end %>
    <%= @offer.title %>
  </div>

  <p>
    <strong>Details:</strong>
    <%= @offer.details %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @offer.price %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= @offer.duration %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @offer.category %>
  </p>


  <% if policy(@offer).edit? %>
    <%= link_to "Edit #{@offer.title}", edit_offer_path(@offer) %>
  <% end %>
  <% if policy(@offer).destroy? %>
    <%= link_to "Delete #{@offer.title}",
                    offer_path(@offer),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
  <% end %>
  <%= link_to 'Back', offers_path %>
</div>
