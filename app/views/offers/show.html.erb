<%= content_tag :div, class: "offer-availability-info", data: {availability: ['November 21, 2021 15:00:00', 'November 19, 2021 15:00:00', 'November 22, 2021 15:00:00']} do %>
<% end %>

<div class="container">
  <div class="offer-card">
  <% unless @offer.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= "https://source.unsplash.com/900x250/?#{@offer.title}" %>')">
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @offer.photo.key %>)">
      <% end %>
    <%= @offer.title %>
  </div>

  <div class="card-infos">
    <div class="infos-one">
      <p>
        <strong>Category:</strong>
        <%= @offer.category %>
      </p>

      <p>
        <strong>Duration:</strong>
        <%= @offer.duration %> minutes
      </p>
      <p>
        <strong>Price:</strong>
        <%= @offer.price %>â‚¬
      </p>
    </div>

    <p id="details">
      <strong>Details:</strong>
      <%= @offer.details %>
    </p>
  </div>

  <div class="buttons">
    <div>
      <% if policy(@offer).edit? %>
        <%= link_to "Edit", edit_offer_path(@offer), class:"btn btn-primary" %>
      <% end %>
      <%= link_to 'Back', offers_path, class:"btn btn-secondary" %>
      <% if policy(@offer).destroy? %>
      </div>
        <%= link_to "Delete",
                    offer_path(@offer),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class:"btn",
                    id:"delete-btn" %>
      <% end %>
  </div>
</div>
  <%= render "datepicker", offer: @offer, appointment: @appointment %>
